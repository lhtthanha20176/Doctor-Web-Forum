@model IEnumerable<Doctorsforum.Models.Post_Detail>

@{
  ViewBag.Title = "Details";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="data-table-area mg-b-15">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="sparkline13-list">
          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
              <h2>Post</h2>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
              <span class="pull-right">
                <a href="/Post_Detail/Create">
                  <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                  </svg>
                  Create new
                </a>
              </span>
            </div>
          </div>
          <div class="sparkline13-graph">
            <div class="datatable-dashv1-list custom-datatable-overright">
              <div id="toolbar">
                <select class="form-control dt-tb">
                  <option value="">Export Basic</option>
                  <option value="all">Export All</option>
                  <option value="selected">Export Selected</option>
                </select>
              </div>
              <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true"
                     data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                <thead>
                  <tr>
                    <th>
                      @Html.DisplayNameFor(model => model.Level)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.forid)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.NumericalOrder)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.TimePost)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.Content)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.Userpost)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.Topic.TopicName)
                    </th>

                  </tr>
                </thead>
                <tbody>
                  @foreach (var item in Model) {
                    <tr>
                      <td>
                        @Html.DisplayFor(modelItem => item.Level)
                      </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.forid)
                      </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.Image)
                      </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.NumericalOrder)
                      </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.Email)
                      </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.TimePost)
                      </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.Content)
                      </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.Userpost)
                      </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.Topic.TopicName)
                      </td>

                    </tr>
                  }

                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
